<%= simple_form_for @car do |f| %>
  <%= f.input :color, required: true %>
  <%= f.input :year, required: true, collection: 1920..2014 %>
  <%= f.hint 'Only after 1920 please' %>
  <%= f.association :manufacturer, required: true %>
  <%= f.input :mileage, required: true %>
  <%= f.input :description, as: :text %>
  <%= f.submit %>
<% end %>
